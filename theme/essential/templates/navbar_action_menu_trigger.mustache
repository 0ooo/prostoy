    Example context (json):
    {
        "instance": "1",
        "title": "Trigger me!",
        "caret": "<span aria-hidden="true" class="fa fa-caret-right"></span>",
        "menutrigger": true
    }
}}
<a href="#" class="toggle-display {{#menutrigger}}textmenu{{/menutrigger}}" id="action-menu-toggle-{{instance}}" title="{{title}}" role="menuitem">{{{actiontext}}}{{#icon}}{{#pix}}{{key}}, {{component}}, {{title}}{{/pix}}{{/icon}}{{#rawicon}}{{{.}}}{{/rawicon}}{{#menutrigger}}{{{caret}}}{{/menutrigger}}</a>
